{
  "name": "react-redux-hooks-node-demo",
  "version": "1.0.0",
  "description": "A sample form using react, redux, hooks and setup with webpack alongside an standalone server built using nodejs and mongodb",
  "main": "index.js",
  "scripts": {
    "watch-css": "npm run build-css && node-sass -w ./src/styles/styles.scss ./src/styles/styles.css",
    "build-css": "node-sass ./src/styles/styles.scss ./src/styles/styles.css",
    "build-prod": "webpack --mode production",
    "build-dev": "webpack --mode development",
    "build-all": "npm-run-all build-server build-prod",
    "start": "npm-run-all -p watch-css start-js",
    "start-js": "webpack-dev-server --config ./webpack.config.js --mode development",
    "test": "jest --env=jsdom --watch",
    "coverage": "jest --env=jsdom --coverage",
    "e2e": "./node_modules/webdriverio/bin/wdio",
    "build-server": "./scripts/build-server.sh",
    "fast-build-server": "./scripts/fast-build.sh",
    "server": "node server/dist/server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mpereiraesaa/react-redux-hooks-node-demo.git"
  },
  "author": "Manuel Pereira",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mpereiraesaa/react-redux-hooks-node-demo/issues"
  },
  "homepage": "https://github.com/mpereiraesaa/react-redux-hooks-node-demo#readme",
  "dependencies": {
    "await-to-js": "^2.1.1",
    "axios": "^0.21.1",
    "babel-core": "^6.26.3",
    "babel-loader": "^8.0.6",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "css-loader": "^3.2.0",
    "file-loader": "^4.2.0",
    "font-awesome": "^4.7.0",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "react": "^16.9.0",
    "react-addons-css-transition-group": "^15.6.2",
    "react-dom": "^16.9.0",
    "react-flexbox-grid": "^2.1.2",
    "react-hot-loader": "^4.12.14",
    "react-md-spinner": "^1.0.0",
    "react-redux": "^7.1.1",
    "redux": "^4.0.4",
    "redux-devtools": "^3.5.0",
    "redux-thunk": "^2.3.0",
    "regenerator": "^0.14.2",
    "sass-loader": "^8.0.0",
